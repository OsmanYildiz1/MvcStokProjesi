@using MvcStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model List<TblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
       <b>Aranacak Müşteri Adı:</b>  @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜSTERİ AD</th>
        <th>MÜSTERİ SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MusteriId</td>
                <td>@item.MusteriAd</td>
                <td>@item.MusteriSoyad</td>
                <td><a href="/Musteri/Sil/@item.MusteriId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@item.MusteriId" class="btn btn-success">GÜNCELLE</a></td>
                <td>
                    @Html.ActionLink("Sil Butonu", "Sil", new { id = item.MusteriId },
               new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })
            </td>
        </tr>
    }
    </tbody>
</table>
